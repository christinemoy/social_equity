<h1>Business List</h1>

<ul>
<% @businesses.each do |i|%>
  <li><%= i.name %></li>
  <li><%= i.description %></li>
  <li><%= i.industry %></li>
  <li><%= i.founded %></li>
  <li><%= i.city %></li>
  <li><%= number_to_currency(i.goal) %></li>
  <%= link_to "Show details", business_path(i)  %>
<% end %>
</ul>